find_path (CUDF_CUB_INCLUDE_DIR NAMES cub/cub.cuh PATHS ${RAPIDSAI_ROOT_DIR}/cub)
find_path (CUDF_JITIFY_INCLUDE_DIR NAMES jitify.hpp PATHS ${RAPIDSAI_ROOT_DIR}/jitify)

