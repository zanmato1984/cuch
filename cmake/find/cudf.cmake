set(CUDA_TOOLKIT_ROOT_DIR /usr/local/cuda)
set(CUDA_LIBRARY_DIR ${CUDA_TOOLKIT_ROOT_DIR}/lib64)
set(CUDA_LIBRARY_STUBS_DIR ${CUDA_TOOLKIT_ROOT_DIR}/lib64/stubs)
set(RAPIDSAI_ROOT_DIR /usr/local/rapidsai)

find_library (CUDA_LIBRARY cuda PATHS ${CUDA_LIBRARY_STUBS_DIR})
find_library (CUDA_RT_LIBRARY cudart PATHS ${CUDA_LIBRARY_DIR})
find_library (RMM_LIBRARY rmm PATHS ${RAPIDSAI_ROOT_DIR}/lib)
find_library (CUDF_LIBRARY cudf PATHS ${RAPIDSAI_ROOT_DIR}/lib)
find_library (NVCATEGORY_LIBRARY NVCategory PATHS ${RAPIDSAI_ROOT_DIR}/lib)
find_library (NVSTRINGS_LIBRARY NVStrings PATHS ${RAPIDSAI_ROOT_DIR}/lib)
find_library (NVTEXT_LIBRARY NVText PATHS ${RAPIDSAI_ROOT_DIR}/lib)

find_path (CUDA_INCLUDE_DIR NAMES cuda.h PATHS ${CUDA_TOOLKIT_ROOT_DIR}/include)
